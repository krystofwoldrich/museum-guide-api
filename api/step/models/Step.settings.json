{
  "connection": "default",
  "collectionName": "steps",
  "info": {
    "name": "step",
    "description": "List of steps creates a tour."
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "coverPicture": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "orderedMediaResources": {
      "collection": "sequence",
      "via": "step"
    },
    "locations": {
      "collection": "location",
      "via": "step"
    }
  }
}